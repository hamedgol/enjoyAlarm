<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.scut.enjoyalarm"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="21" />

	<uses-permission android:name="android.permission.VIBRATE" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="com.enjoyalarm.MainActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.enjoyalarm.AlarmWakeActivity"
			android:label="@string/title_activity_alarm_wake" >
		</activity>
		<activity
			android:name="com.enjoyalarm.GetTextActivity"
			android:label="@string/title_activity_get_text"
			android:theme="@style/GetTextTheme"
			android:windowSoftInputMode="stateVisible" >
		</activity>
		<activity
			android:name="com.enjoyalarm.HelpActivity"
			android:label="@string/title_activity_help" >
		</activity>
	</application>

</manifest>
