<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<TextView
		android:id="@+id/layer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#77000000" />

	<LinearLayout
		android:id="@+id/get_text_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<EditText
			android:id="@+id/get_text_et"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10" />

		<Button
			android:id="@+id/get_text_confirm_bt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:layout_marginRight="4dp"
			android:background="@drawable/confirm_bt_bg"
			android:padding="8dp"
			android:text="@string/dialog_yes"
			android:textSize="22sp" />

		<TextView
			android:id="@+id/get_text_tv"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:gravity="center"
			android:text="@string/get_text_word"
			android:textColor="@android:color/darker_gray"
			android:textSize="24sp" />
	</LinearLayout>

</FrameLayout>